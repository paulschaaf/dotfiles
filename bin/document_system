#!/bin/bash

# $Source: e:/MyDocuments/cvsroot/bin/document_system,v $
# $Revision: 1.9 $
# $Date: 2004/04/02 19:40:27 $
# $Author: pschaaf $
# $State: Exp $
# $Name:  $

echo "# -*- eval: (outline-minor-mode) -*-"

# ====================================================================
# ====
# ==== Setup execution environment here
# ====
# ====================================================================

# unset GREP_COLOR GREP_OPTIONS
# unset `env | grep -i '^[^=]*color' | sed 's/=.*//g'`
# export PATH=/usr/local/bin:/bin:/usr/bin:/sbin:/usr/sbin

export PS4="
# === \$ "

# ====================================================================
# ====
# ==== Add commands below the 'set -x' to document the system
# ====
# ==== Use a subshell to display a set of piped commands as one:
# ====    bash -c 'ls | sort'
# ==== instead of just specifying them directly:
# ====    ls | sort
# ====
# ====================================================================
[ $1 = "-q" ] && shift || set -x

/bin/date +%F_%T

: Show that no alias or function affects results shown below.
builtin unalias -a
builtin typeset -f

/bin/hostname
/bin/domainname || echo $USERDNSDOMAIN
/usr/bin/hostid
/bin/uname -a

/usr/bin/crontab -l

partinfo
sysinfo

[ -z "$CYGROOT" ] && dmesg

/usr/bin/rpmquery -a | /bin/sort

tree -CDFgpsu --dirsfirst --ignore_backups --ignore_cvs /etc/rc.d

# /bin/ls -BCFlh /etc/rc.d
# /bin/ls -BCFlh /etc/rc.d/init.d
# /bin/ls -BCFlh /etc/rc.d/rc*.d

# ====================================================================
# ====
# ==== Do not add documentation commands after this point
# ====
# ====================================================================
set +x
