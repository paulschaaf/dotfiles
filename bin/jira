#!/bin/bash

#set -x
if [ "$1" = "-a" -o "$1" = "--all" ]; then
	issues=`git branch | sed -n 's_.*/\(.*\)_\U\1_'p`
else
	issues=${*:-$GIT_BRANCH}
fi

for jira in ${issues}; do
	# echo checking jira \#$jira
	jira=`echo $jira | sed 's_.*/\(.*\)_\U\1_'`
	if [ -n "$jira" ]; then
		echo "chrome jira.guidewire.com/browse/$jira &"
		chrome jira.guidewire.com/browse/$jira &
	fi
done
