#!/bin/bash

#set -x
if [ "$1" = "-a" -o "$1" = "--all" ]; then
	 issues=`git branch | sed -n 's_.*/\(.*\)_\U\1_p'`
else
	 issues=${*:-$GIT_BRANCH}
fi

for issue in ${issues}; do
	 # echo checking issue \#$issue
	 issue=${issue##*/}  # remove leading path
    issue=${issue%%_*}  # remove any underscore and what follows
	 if [ -n "$issue" ]; then
        URL="rally1.rallydev.com/#/search?keywords=$issue"
        echo "google-chrome $URL"
        google-chrome $URL &
	 fi
done
