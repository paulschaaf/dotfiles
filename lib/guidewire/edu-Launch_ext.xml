<?xml version="1.0" ?>

<project name="CC403 Education Launcher Extensions"
         default="Explore dev files"
         basedir=".">
	<description>
		Launch browser against common locations by Paul Schaaf 01/09/08
	</description>


	<target
		name="Tools financialsescalation">
		<gw-maintenance process="financialsescalation" />
	</target>

	<target
		name="Tools claimexception">
		<gw-maintenance process="claimexception" />
	</target>

	<target
		name="Tools Import Sample Data">
		<gw-import
			filenamelist="@${basedir}/toolkit/sampledata/sampleDataFiles.lst"
			description="sample data" />
	</target>


	<!-- =========================================================
		==
		== POSIX Targets
		==
		=========================================================== -->

	<!--	Running: [cmd.exe /C start '"cc4.0.3 - http://localhost:8080/cc"'  zsh -il ""] in []	-->
	<target name="Run POSIX shell"
	        description="Open a POSIX shell in the working directory">
		<fail unless="posix.shell"
		      message="${posix.shell} has not been defined!" />
		<console executable="${posix.shell}" />
	</target>

	<target
		name="Run Screen session"
		description="Open a 'screen' session in the working directory">
		<!-- Running: [cmd.exe] [/C start '"cc4.0.3 - http://localhost:8080/cc"'  /MIN sh screenin  ] in []	-->

		<fail
			unless="posix.screen"
			message="${posix.screen} has not been defined!" />
		<console executable="${posix.screen}" />
	</target>

</project>