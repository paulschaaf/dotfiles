	<!-- =========================================================
		==  Windows Tools
		=========================================================== -->

	<target
		name="Run DOS prompt"
		description="Open a command prompt in the working directory">
		<console executable="${dos.shell}" />
	</target>

	<target
		name="Files in project"
		description="Open a Windows explorer in the parent directory">
		<run
			executable="explorer.exe"
			arguments="/e,/root,${basedir}\.." />
	</target>

	<target
		name="Files in server config"
		description="Open a Windows explorer in the server's config directory">
		<fail
			unless="tomcat.dir"
			message="${tomcat.dir} has not been defined!" />
		<run
			executable="explorer.exe"
			arguments="/e,/root,${tomcat.dir.dos}\webapps\${app.name}\config" />
	</target>


	<!-- =========================================================
		==  Diff Tools
		=========================================================== -->
	<target
		name="Run Diff PCFs"
		description="Launch a tool to compare the dev and server PCF directories.">
		<launch-diff targetdir="/config/web/pcf" />
	</target>

	<target
		name="Run Diff Rules"
		description="Launch a tool to compare the dev and server rules directories.">
		<launch-diff targetdir="/config/resources/rules" />
	</target>


	<!-- =========================================================
		==  Other Tools
		=========================================================== -->
	<target
		name="Run Backup (daily update)"
		description="Back up the config directory. One file is maintained for each day.">
		<tstamp />
		<!-- Initialize DSTAMP and TSTAMP properties -->
		<zip
			basedir="."
			excludes="config-defaults-*.zip"
			includes="config/**"
			zipfile="config_${DSTAMP}.zip"
			update="true" />

	</target>


	<!-- =========================================================
		==
		==  Browse Targets
		==
		=========================================================== -->

	<target
		name="Browse API Doc"
		description="Browse the JavaDoc API">
		<browse url="${basedir}\toolkit\doc\index.html" />
	</target>

	<target
		name="Browse Data Dictionary"
		description="Browse the data dictionary">
		<browse
			protocol="file"
			url="${application.dir}/dictionary/data/index.html" />
	</target>

	<target
		name="Browse Documentation"
		description="Browse the product documentation">
		<browse url="${basedir}\doc\index.html" />
	</target>

	<target
		name="Browse PCF Reference"
		description="Browse the PCF Reference Guide">
		<browse
			protocol="file"
			url="${application.dir}/config/web/schema/ref/index.html" />
	</target>

	<target
		name="Browse Security Dictionary"
		description="Browse the Security Dictionary">
		<browse
			protocol="file"
			url="${application.dir}/dictionary/security/index.html" />
	</target>


	<!-- =========================================================
		==
		==  Logins
		==
		=========================================================== -->

	<target
		name="Login screen"
		description="Open a browser on the login screen">
		<browse url="${application.url}" />
	</target>

	<target
		name="Login to InternalTools"
		description="">
		<browse url="${application.url}/InternalTools.do" />
	</target>


