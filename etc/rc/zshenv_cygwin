for f in ${path[@]}; do
  fixed=$(echo ${f} | sed 's_/cygdrive__; s_Program Files (x86)_PROGRA~2_; s_Program Files_PROGRA~1_')
  printf "%-80s | %s\n" $f $fixed
done
